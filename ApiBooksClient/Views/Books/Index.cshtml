@model List<ApiBooksClient.DTO.Book>

@{
    ViewBag.Title = "Libros";
}



<h2>Lista de libros</h2>
<a>
    @Html.ActionLink("Crear libro", "Create", "Books", new { }, null)
</a>
<br />
@using (Html.BeginForm("Index", "Books", FormMethod.Get))
{
    <label>
        Buscar por ID
    </label>
    <br />
    @Html.TextBox("id")
    <input type="submit" value="Buscar" />


}

@if (ViewBag.Error != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Error");
            };
    </script>

}

<br />
<br />
<body>
    <table class="table table-bordered table-condensed table-hover">
        <thead>
            <tr>
                <td>
                    Title
                </td>
                <td>
                    Description
                </td>
                <td>
                    Page Count
                </td>
                <td>
                    Excerpt
                </td>
                <td>
                    Publish Date
                </td>
                <td>
                </td>
                <td>
                </td>
                <td>
                </td>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.PageCount
                    </td>
                    <td>
                        @item.Excerpt
                    </td>
                    <td>
                        @item.PublishDate
                    </td>
                    <td>
                        @Html.ActionLink("Ver detalles", "Detail", "Books", new { id = item.ID }, null)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", "Books", new { id = item.ID }, null)
                    </td>
                    <td>
                        @Html.ActionLink("Eliminar", "Delete", "Books", new { id = item.ID }, null)
                    </td>
                </tr>

            }
        </tbody>

    </table>
</body>
